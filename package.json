{
  "name": "drawdd",
  "private": false,
  "version": "2.0.0",
  "description": "DRAWDD - Open Source Diagramming Tool for flowcharts, mindmaps, and more",
  "author": "DRAWDD Team",
  "license": "MIT",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "electron:dev": "set ELECTRON_DEV=true && electron .",
    "electron:build": "npm run build && electron-builder --win",
    "electron:build:portable": "npm run build && electron-builder --win portable",
    "package-win": "npm run build && electron-packager . DRAWDD --overwrite --platform=win32 --arch=x64 --out=release-builds --prune=true --icon=public/icons/icon-256.ico && node scripts/package-clean.cjs",
    "dist": "npm run build && electron-builder --win --publish never"
  },
  "build": {
    "appId": "com.drawdd.app",
    "productName": "DRAWDD",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/icons/**/*",
      "public/manifest.json",
      "package.json",
      "LICENSE",
      "README.md"
    ],
    "extraFiles": [],
    "asarUnpack": [],
    "win": {
      "icon": "public/icons/icon-256.ico",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-Portable.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}"
    },
    "compression": "maximum",
    "nsis": false
  },
  "dependencies": {
    "@antv/x6": "^2.19.2",
    "@antv/x6-plugin-clipboard": "^2.1.6",
    "@antv/x6-plugin-dnd": "^2.1.1",
    "@antv/x6-plugin-export": "^2.1.6",
    "@antv/x6-plugin-history": "^2.2.4",
    "@antv/x6-plugin-keyboard": "^2.2.3",
    "@antv/x6-plugin-minimap": "^2.0.7",
    "@antv/x6-plugin-selection": "^2.2.2",
    "@antv/x6-plugin-snapline": "^2.1.7",
    "@antv/x6-plugin-transform": "^2.1.8",
    "@antv/x6-react-shape": "^2.2.3",
    "electron-squirrel-startup": "^1.0.1",
    "file-saver": "^2.0.5",
    "jspdf": "^3.0.4",
    "jszip": "^3.10.1",
    "katex": "^0.16.28",
    "lucide-react": "^0.556.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "vsdx-js": "^1.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/file-saver": "^2.0.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "fast-check": "^4.5.3",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "rcedit": "^5.0.2",
    "tailwindcss": "^4.1.17",
    "ts-jest": "^29.4.6",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}